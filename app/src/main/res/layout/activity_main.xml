<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5636363"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context="id.sch.smktelkom_mlg.tugas001.xirpl3007.peminjamanbuku.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peminjaman Buku"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/rgpilihan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center">

            <RadioButton
                android:id="@+id/radioButtonkembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Kembalikan"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/radioButtonpinjam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Peminjaman"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masa Pinjam"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkBoxbk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="false"
            android:text="3 Hari"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/checkBoxkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:gravity="center_vertical"
            android:text="5 Hari"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/checkBoxmj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="false"
            android:text="1 Minggu"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinnerJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Kaset"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editTextinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Pemesan"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/buttonOK"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:text="Submit" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            tools:text="Output" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            tools:text="Judul Buku" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            tools:text="Nama Pemesan" />

    </LinearLayout>
</ScrollView>



